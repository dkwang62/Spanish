  "educational_content": {
    "diagnostic_rule": {
      "text": "Check the structure: Is the person the SUBJECT (doing it) or the EXPERIENCER (feeling it)? If 'it implies X happens to me/pleases me' (me gusta, me duele), it is an EXPERIENCER verb.",
      "examples": [
        { "spanish": "Me lavo", "type": "Reflexive (I wash myself)" },
        { "spanish": "Me gusta", "type": "Experiencer (It pleases me)" },
        { "spanish": "Se me cayó", "type": "Accidental (It dropped on me)" }
      ]
    }
